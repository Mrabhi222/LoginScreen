<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LoginScreen.Views.Shared.Keypad">

    <Border Stroke="#DADADA"
            Padding="16"
            StrokeShape="RoundRectangle 16">

        <Grid RowDefinitions="*,*,*,*,Auto,Auto"
              ColumnDefinitions="*,*,*"
              RowSpacing="10"
              ColumnSpacing="10">

            <!-- Display -->
            <Entry
              Grid.Row="0"
                Grid.ColumnSpan="3"
                Text="{Binding Pin}"
                Placeholder="Enter your User Code to Login"
               IsReadOnly="True"
               FontSize="18"
             WidthRequest="300" 
             VerticalTextAlignment="Center"
             BackgroundColor="#F2F2F2"
            />


            <!-- Numbers -->
            <Button Text="1" Grid.Row="1" Command="{Binding KeyPressedCommand}" CommandParameter="1"/>
            <Button Text="2" Grid.Row="1"     Grid.Column="1" Command="{Binding KeyPressedCommand}" CommandParameter="2"/>
            <Button Text="3" Grid.Row="1"   Grid.Column="2" Command="{Binding KeyPressedCommand}" CommandParameter="3"/>

            <Button Text="4" Grid.Row="2" Command="{Binding KeyPressedCommand}" CommandParameter="4"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Command="{Binding KeyPressedCommand}" CommandParameter="5"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Command="{Binding KeyPressedCommand}" CommandParameter="6"/>

            <Button Text="7" Grid.Row="3" Command="{Binding KeyPressedCommand}" CommandParameter="7"/>
            <Button Text="8" Grid.Row="3" Grid.Column="1" Command="{Binding KeyPressedCommand}" CommandParameter="8"/>
            <Button Text="9" Grid.Row="3" Grid.Column="2" Command="{Binding KeyPressedCommand}" CommandParameter="9"/>

            <Button Text="0" Grid.Row="4" Grid.Column="1" Command="{Binding KeyPressedCommand}" CommandParameter="0"/>
            <Button Text="âŒ«" Grid.Row="4" Grid.Column="2" Command="{Binding KeyPressedCommand}" CommandParameter="Backspace"/>

            <Button Text="Login"
                    Grid.Row="5"
                    Grid.ColumnSpan="3"
                    Command="{Binding LoginCommand}"/>
        </Grid>
    </Border>
</ContentView>
